pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script{
                    sh 'mvn clean package'
                }
            }    
            post {
                success {
                    echo 'Now archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Deploy to Staging'){
            steps{
                build job:'nome-del-job-da-triggerare-che-Ã esegue-il-deploy'

            }
        }    
    }
}